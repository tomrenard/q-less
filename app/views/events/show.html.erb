<main>
    <div class=showpage>
        <div class="img-container">
            <% if @event.photo.attached? %>
            <div class="show-img">
                <%= cl_image_tag @event.photo.key, height: 300, width: 400, crop: :fit %>
            </div>
            <% else %>
            <div class="seed-img"><img src="<%= @event.photo_link %>" alt="" /></div>
            <% end %>
        </div>
        <div>
            <div class="title">
                <h1>
                    <%#= @event.title %>
                </h1>
                <div class="card-product">
                    <div class="card-product-infos">
                        <% if @last_queues.nil? %>
                        <div>
                            <h2>No Q for now</h2>
                        </div>
                        <% else %>
                        <div>
                            <h1><i class="fas fa-user-clock"></i> REAL TIME QUEUE</h1>
                            <% @very_last_queues.each do |very_last_queue| %>
                              <h2><%= very_last_queue.waiting_time %>min</h2>
                            <% end %>
                        </div>
                        <% end %>
                    </div>
                </div>
                <h3>
                    <%#= @user = current_user.nickname %>
                    <%#=to double check%>
                </h3>
                <div>
                    <% if user_signed_in? %>
                    <%# && !current_user?%>
                    <%# if current_user.following(@user) %>
                    <button class="btn-default">UnFollow</button>
                    <%# else  %>
                    <%#= <button class="btn-default">Follow</button> %>
                    <%# end %>
                    <% end %>
                </div>
                <h3>
                    <%= @event.category %>
                </h3>
                <h3>
                   <i class="fas fa-thumbtack"></i> <%= @event.location %>
                </h3>
            </div>
            <div class="address">
                <p>
                    <strong>
                       <i class="fas fa-location-arrow"></i> <%= @event.address %></strong>
                </p>
            </div>
            <div class="date">
                <p><strong>
                       <i class="fas fa-calendar-day"></i> <%= @event.start_time.strftime("%d/%m/%Y") %></strong></p>
            </div>
            <div class="line_up">
                <p> <strong></strong><br>
                   <i class="fas fa-music"></i> <%= @event.line_up %>
                </p>
            </div>
            <div class="description">
                <p>
                    <%= @event.description %>
                </p>
                <h3>
                    <%= @event.price %>
                </h3>
                <h3>
                    <%= @event.end_time %>
                </h3>
            </div>
            <h3>
                <%= @event.tag_list %>
            </h3>
            <%= link_to favorite_text, event_wishlist_path(event: @event), method: :patch, id: "favorite_link", remote: true %>
            <!-- <h5>The average waiting time is 17min.</h5> -->
            <ul>
                <% @related_events.each do |event| %>
                <li>
                    <%= event.title %>
                    <% end %>
                </li>
            </ul>
        </div>
        <% if current_user.event_wishlists.find {|event_w| event_w.event_id ==
  @event.id} %>
        <% else %>
        <% end %>
        <div>
            <% if policy(Event).destroy? %>
            <p>
                <%= link_to "Delete my event", event_path(@event), method: :delete, data:
      { confirm: "Are you sure?"}, class: 'btn btn-danger'%>
            </p>
            <% end %>
            <% if policy(Event).edit? %>
            <p>
                <%= link_to "Update my event", edit_event_path(@event), class: 'btn
      btn-info'%>
            </p>
            <% end %>
        </div>
</main>
<div class="queue_est text-center">
    <h2>Queue estimation</h2>
    <% @last_queues.each do |last_queue| %>
    <div class=qest>
        <p>Queue of <strong>
                <%= last_queue.waiting_time %>min</strong> on
            <%= last_queue.created_at.strftime("%a %b %e at %l:%M%p")%> indicated by
            <%= last_queue.user.email %>.</p>
    </div>
    <% end %>
</div>
<div class="text-center">
    <h2>Already in front of the club?</h2>
    <%= link_to new_event_queue_estimation_path(@event,
    @queue_estimation) do %>
    <button type="button" class="btn btn-secondary ">Give a estimation of the queue
    </button>
    <% end %>
</div>
<br>
<div id=chatrooomi>
    <h1>
        <%= @chatroom.name %>
    </h1>
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.messages.each do |message| %>
        <div class="message-container" id="message-<%= message.id %>">
            <i class="author">
                <span>
                    <%= message.user.nickname %></span>
                <small>
                    <%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            </i>
            <p>
                <%= message.content %>
            </p>
        </div>
        <% end %>
    </div>
    <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
    <%=
          f.input :content, label: false, placeholder: "Find some friends, ask for the timetable" %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <% end %>
</div>
</div>
